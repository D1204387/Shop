<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundGravity="fill_horizontal"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                android:scaleX="1.1"
                android:scaleY="1.5"
                app:srcCompat="@drawable/main" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="78dp"
                        android:layout_height="match_parent"
                        android:baselineAligned="false"
                        app:srcCompat="@drawable/logo3" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:paddingStart="10dp"
                        android:text="好食‧慢慢 "
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/Info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="「好吃的東西不只是細細品嚐，還需慢慢製作，美好的味道才能齒頰留香。」我們致力於把事、物「好」的一面呈現給大家。" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"

                        android:layout_marginVertical="5dp"
                        android:gravity="center"
                        android:text="營業時間"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="10dp">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="355dp"
                            android:layout_height="wrap_content"
                            android:text="平日：午餐：上午11:30-下午3:00 晚餐：下午5:30-下午9:00"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="假日：午餐：上午11:00-下午3:00 晚餐：下午5:00-下午9:00"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="週二店休"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/address"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#E7E5E5"
                        android:onClick="clickMap"
                        android:text="地址"
                        android:textColor="#0D0D0D" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="10dp"
                        android:text="404台中市北區梅川西路三段68巷1號" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/tel"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#E7E5E5"
                        android:onClick="clickCall"
                        android:text="電話"
                        android:textColor="#0D0D0D" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="10dp"
                        android:text="04 2205 8000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"

                        android:backgroundTint="#E7E5E5"
                        android:onClick="inlineBooking"
                        android:text="訂位"
                        android:textColor="#0D0D0D" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:paddingStart="10dp"
                        android:text="線上訂位預約" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/web"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#E7E5E5"
                        android:onClick="webSearch"
                        android:text="fb"
                        android:textColor="#0D0D0D" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:text="好食慢慢 FB 粉絲頁" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:background="@color/black"
                    app:srcCompat="@drawable/res2" />

                <ImageButton
                    android:id="@+id/menu1"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:background="@color/black"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/menu1" />

                <ImageButton
                    android:id="@+id/menu2"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:background="@color/black"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/menu2" />

                <ImageButton
                    android:id="@+id/menu3"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:background="@color/black"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/menu3" />

                <ImageButton
                    android:id="@+id/menu4"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:background="@color/black"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/menu4" />

                <ImageButton
                    android:id="@+id/menu5"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:background="@color/black"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/menu5" />

                <ImageButton
                    android:id="@+id/menu6"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:background="@color/black"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/menu6" />

                <ImageButton
                    android:id="@+id/menu7"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:background="@color/black"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/menu7" />

                <ImageButton
                    android:id="@+id/menu8"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:background="@color/black"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/menu8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/menu9" />

                    <ImageButton
                        android:id="@+id/imageButton5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/menu10" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>